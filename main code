#include <LiquidCrystal.h>

// LCD pin setup (RS, E, D4, D5, D6, D7)
LiquidCrystal lcd(8, 9, 4, 5, 6, 7);

// IR sensor and button pins
const int irSensors[3] = {A0, A1, A2};
const int buttons[3] = {10, 11, 12};
const int leds[3] = {2, 3, 13};

void setup() {
  lcd.begin(16, 2);
  lcd.print("Reaction Timer");
  delay(2000);
  lcd.clear();

  // Set pin modes
  for (int i = 0; i < 3; i++) {
    pinMode(irSensors[i], INPUT);
    pinMode(buttons[i], INPUT_PULLUP);
    pinMode(leds[i], OUTPUT);
    digitalWrite(leds[i], LOW);
  }

  lcd.print("Place your hand");
}

void loop() {
  // Wait for all players to be ready (hand near IR sensor)
  bool allReady = false;
  while (!allReady) {
    allReady = true;
    for (int i = 0; i < 3; i++) {
      if (analogRead(irSensors[i]) > 500) { // Adjust threshold as needed
        allReady = false;
      }
    }
  }

  lcd.clear();
  lcd.print("Get Ready...");
  delay(1000);
  lcd.clear();

  // Random delay (4â€“5 seconds)
  delay(random(4000, 5001));

  // Start Game: Turn on LEDs
  for (int i = 0; i < 3; i++) {
    digitalWrite(leds[i], HIGH);
  }

  unsigned long startTime = millis();
  int winner = -1;

  // Wait for button press
  while (winner == -1) {
    for (int i = 0; i < 3; i++) {
      if (digitalRead(buttons[i]) == LOW) {
        winner = i;
        break;
      }
    }
  }

  unsigned long reactionTime = millis() - startTime;

  // Turn off LEDs
  for (int i = 0; i < 3; i++) {
    digitalWrite(leds[i], LOW);
  }

  // Show result
  lcd.clear();
  lcd.print("Winner: P");
  lcd.print(winner + 1);
  lcd.setCursor(0, 1);
  lcd.print("Time: ");
  lcd.print(reactionTime);
  lcd.print(" ms");

  delay(5000); // Pause before restart
  lcd.clear();
  lcd.print("Place your hand");
}
